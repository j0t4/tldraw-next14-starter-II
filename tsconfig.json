{
  "extends": "./tsconfig_base.json",
  "include": [
    "src",
    "scripts",
    "vite.config.mts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".tsbuild*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "emitDeclarationOnly": false,
    "types": [
      "node"
    ],
    "allowJs": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "references": []
}
